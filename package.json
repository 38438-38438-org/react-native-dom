  "keywords": [],
  "homepage": "https://github.com/vincentriemer/react-native-dom",
  "bugs": {
    "url": "https://github.com/vincentriemer/react-native-dom/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentriemer/react-native-dom.git"
